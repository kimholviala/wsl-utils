#!/bin/sh

##
## Generate resolv.conf using Windows DNS data
##

#
# Run this from cron every now and then to sync WSL resolv.conf with Windows
# DNS settings.
#

POWERSHELL="/mnt/c/Windows/System32/WindowsPowerShell/v1.0/powershell.exe"
RESOLVCONF="/etc/resolv.conf"
RESOLVTEMP="`mktemp`"

trap 'rm -f "$RESOLVTEMP"' EXIT

echo "# Automatically generated by `basename $0`" > $RESOLVTEMP
$POWERSHELL "Get-DnsClient | Select-Object -ExpandProperty ConnectionSpecificSuffix" | tr -d '\r' | awk '/[[:alnum:]]/ { print "domain " $1; exit }' >> $RESOLVTEMP
$POWERSHELL "Get-DnsClientGlobalSetting | Select-Object -ExpandProperty SuffixSearchList" | tr -d '\r' | xargs -r echo search >> $RESOLVTEMP
$POWERSHELL "Get-DnsClientServerAddress | Select-Object -ExpandProperty ServerAddresses" | tr -d '\r' | awk '/(\.|2001:)/ { print "nameserver " $1 }' >> $RESOLVTEMP

if grep -q nameserver $RESOLVTEMP; then
	uniq $RESOLVTEMP > $RESOLVCONF
fi

